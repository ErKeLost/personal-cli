{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2020",
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  // "references": [
  //   {
  //     "path": "../core/tsconfig.build.json"
  //   }
  // ]
}
